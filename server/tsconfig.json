{
    "compilerOptions": {
      "module": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "NodeNext",
      "target": "ES6",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "allowJs": true,
      "outDir": "../dist/server",
      "baseUrl": "./",
      "paths": {
        "@client/*": ["../src/*"]
      },
      "allowSyntheticDefaultImports": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["server.ts", "./config", "./lib", "./routes", "./types"],
}
